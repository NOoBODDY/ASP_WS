@model ASP_WS.Models.Breed
@{
    ViewBag.Title = @Model.Name;
}
<div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя: @Model.Name</label>
    </div>
    <div class="form-group">
        <label asp-for="Description"  class="control-label">Описание: @Model.Description</label>
    </div>
    <div class="form-group">
        <a class="btn btn-default" asp-controller = "Breed" asp-action="Edit" asp-route-id = "@Model.Id"> Редактировать </a>
    </div>
</div>
